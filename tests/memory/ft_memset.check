#suite Test_memset

#include <string.h>
#include "libft.h"

#test ft_memset_test
	char buf_expected[10000];
	char buf_actual[10000];

	ck_assert_mem_eq(ft_memset(buf_actual, 5, 10000), memset(buf_expected, 5, 10000), 10000);
	ck_assert_mem_eq(buf_expected, buf_actual, 10000);

	ck_assert_mem_eq(ft_memset(buf_actual, 'A', 10000),	memset(buf_expected, 'A', 10000), 10000);
	ck_assert_mem_eq(buf_expected, buf_actual, 10000);

	ck_assert_mem_eq(
		ft_memset(buf_actual, 12345, 10000),
		memset(buf_expected, 12345, 10000),
		10000
	);
	ck_assert_mem_eq(buf_expected, buf_actual, 10000);

	ck_assert_mem_eq(
		ft_memset(buf_actual + 3, 'F', 5000),
		memset(buf_expected + 3, 'F', 5000),
		9000
	);
	ck_assert_mem_eq(buf_expected, buf_actual, 10000);
